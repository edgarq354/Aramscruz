<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_animacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro_inicio_sesion.Animacion"
    android:background="@drawable/ic_fondo"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|center"
        >
        <ProgressBar
            android:layout_width="1sp"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleLarge"
            android:layout_gravity="center|right"
            android:minHeight="50dp"
            android:minWidth="200dp"
            android:visibility="invisible"
            />

    </LinearLayout>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="1"
        android:layout_gravity="bottom"
        android:indeterminate="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:minHeight="50dp"
        android:minWidth="200dp"
        android:id="@+id/cargando"
        android:visibility="invisible"
        />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:src="@drawable/ic_logo"
        android:id="@+id/ic_logo"
        android:visibility="invisible"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:src="@drawable/ic_logo"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DisfrutÃ¡ tu viaje de una manera"
            android:gravity="center"
            android:textColor="@color/colorIcons"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEGURA y DIFERENTE"
            android:gravity="center"
            android:textColor="@color/colorazul"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:background="@drawable/fondo_logo"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="25sp"
                android:src="@drawable/ic_movil"></ImageView>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:background="@drawable/ic_ciudad"
        android:layout_gravity="bottom"
        />


</FrameLayout>
